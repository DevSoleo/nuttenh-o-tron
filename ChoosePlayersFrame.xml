<Ui xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="main.lua" />
	<Font virtual="true" outline="NONE">
		<Color r="1" g="1" b="1" />
	</Font>
	<Alpha toAlpha="1" />
	<Frame name="ChoosePlayersFrame" inherits="BackdropTemplate" hidden="true" parent="UIParent" toplevel="true" movable="true" enableMouse="true" clampedToScreen="true" dontSavePosition="true">
		<Size x="240" y="345" />
		<Anchors>
			<Anchor point="CENTER" relativeTo="UIParent" />
		</Anchors>
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="16" />
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="ChoosePlayersText" inherits="GameFontNormal" text="SÃ©lectionnez les participants">
					<Size x="280" y="60" />
					<Anchors>
						<Anchor y="-5" point="TOP" />
					</Anchors>
				</FontString>
				<FontString name="GuildFontString" inherits="GameFontNormal" text="Guilde" justifyH="LEFT">
					<Size x="160" y="20" />
					<Anchors>
						<Anchor x="45" y="100" point="LEFT" relativeTo="ChoosePlayersFrame" />
					</Anchors>
					<Color r="0.23" g="0.88" b="0.25" />
				</FontString>
				<FontString name="RaidFontString" inherits="GameFontNormal" text="Raid" justifyH="LEFT">
					<Size x="160" y="20" />
					<Anchors>
						<Anchor x="45" y="75" point="LEFT" relativeTo="ChoosePlayersFrame" />
					</Anchors>
					<Color r="1" g="0.49" />
				</FontString>
				<FontString name="PartyFontString" inherits="GameFontNormal" text="Groupe" justifyH="LEFT">
					<Size x="160" y="20" />
					<Anchors>
						<Anchor x="45" y="50" point="LEFT" relativeTo="ChoosePlayersFrame" />
					</Anchors>
					<Color r="0.67" g="0.67" b="0.99" />
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="CloseButton" inherits="UIPanelCloseButton">
				<Size x="30" y="30" />
				<Anchors>
					<Anchor x="-5" y="-5" point="TOPRIGHT" relativeTo="ChoosePlayersFrame" />
				</Anchors>
			</Button>
			<CheckButton name="CB_GuildPlayers" inherits="UICheckButtonTemplate" text="">
				<Size x="32" y="32" />
				<Anchors>
					<Anchor x="15" y="100" point="LEFT" relativeTo="ChoosePlayersFrame" />
				</Anchors>
				<Scripts>
					<OnClick>
						CB_GuildPlayers_OnClick(self)
					</OnClick>
					<OnLoad>
						if (isInGuild("PLAYER") == false) then
							CB_GuildPlayers:SetChecked(false)
							CB_GuildPlayers:Disable()
							CB_GuildPlayers:SetAlpha(0.5)
							GuildFontString:SetAlpha(0.5)
						end
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="CB_RaidPlayers" inherits="UICheckButtonTemplate" text="">
				<Size x="32" y="32" />
				<Anchors>
					<Anchor x="15" y="75" point="LEFT" relativeTo="ChoosePlayersFrame" />
				</Anchors>
				<Scripts>
					<OnClick>
						CB_RaidPlayers_OnClick(self)
					</OnClick>
					<OnLoad>
						if (UnitInRaid("PLAYER") ~= 1) then
							CB_RaidPlayers:SetChecked(false)
							CB_RaidPlayers:Disable()
							CB_RaidPlayers:SetAlpha(0.5)
							RaidFontString:SetAlpha(0.5)
						end
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="CB_PartyPlayers" inherits="UICheckButtonTemplate" text="">
				<Size x="32" y="32" />
				<Anchors>
					<Anchor x="15" y="50" point="LEFT" relativeTo="ChoosePlayersFrame" />
				</Anchors>
				<Scripts>
					<OnClick>
						CB_PartyPlayers_OnClick(self)
					</OnClick>
					<OnLoad>
						if (GetNumPartyMembers() == 0) then
							CB_PartyPlayers:SetChecked(false)
							CB_PartyPlayers:Disable()
							CB_PartyPlayers:SetAlpha(0.5)
							PartyFontString:SetAlpha(0.5)
						end
					</OnLoad>
				</Scripts>
			</CheckButton>
			<Button name="ValidateChoosePlayersButton" inherits="UIPanelButtonTemplate" text="Valider">
				<Size x="75" y="23" />
				<Anchors>
					<Anchor x="-40" y="10" point="BOTTOM" relativeTo="ChoosePlayersFrame" />
				</Anchors>
				<Scripts>
					<OnClick>
						ValidateChoosePlayersButton_OnClick()
					</OnClick>
				</Scripts>
			</Button>
			<Button name="BackChoosePlayersButton" inherits="UIPanelButtonTemplate" text="Retour">
				<Size x="75" y="23" />
				<Anchors>
					<Anchor x="40" y="10" point="BOTTOM" relativeTo="ChoosePlayersFrame" />
				</Anchors>
				<Scripts>
					<OnClick>
						BackChoosePlayersButton_OnClick(self)
					</OnClick>
				</Scripts>
			</Button>
			<EditBox name="Input_Player" inherits="InputBoxTemplate" parent="ChoosePlayersFrame" enableKeyboard="true" autoFocus="false">
				<Size x="100" y="32" />
				<Anchors>
					<Anchor x="25" y="25" point="LEFT" relativeTo="ChoosePlayersFrame" />
				</Anchors>
				<Scripts>
					<OnLoad>
						-- 12 characters max for a player name
						self:SetMaxBytes(12)
					</OnLoad>
					<OnEscapePressed>
						self:ClearFocus()
					</OnEscapePressed>
					<OnEnterPressed>
						PlayerToListButton_OnClick()
					</OnEnterPressed>
				</Scripts>
			</EditBox>
			<Button name="PlayerToListButton" inherits="UIPanelButtonTemplate" text="">
				<Size x="30" y="30" />
				<Anchors>
					<Anchor x="30" point="RIGHT" relativeTo="Input_Player" />
				</Anchors>
				<Scripts>
					<OnClick>
						PlayerToListButton_OnClick(self)
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\BUTTONS\UI-Panel-SmallerButton-Up" />
				<PushedTexture file="Interface\BUTTONS\UI-Panel-SmallerButton-Down" />
			</Button>
			<Button name="TargetToListButton" inherits="UIPanelButtonTemplate" text="">
				<Size x="17" y="17" />
				<Anchors>
					<Anchor x="15" y="1" point="RIGHT" relativeTo="PlayerToListButton" />
				</Anchors>
				<Scripts>
					<OnClick>
						TargetToListButton_OnClick(self)
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\ICONS\Ability_Hunter_FocusedAim" />
				<PushedTexture file="Interface\ICONS\Ability_Hunter_FocusedAim" />
			</Button>
			<Button name="ClearListButton" text="">
				<Size x="30" y="30" />
				<Anchors>
					<Anchor x="-11" y="25" point="RIGHT" relativeTo="ChoosePlayersFrame" />
				</Anchors>
				<Scripts>
					<OnClick>
						ClearListButton_OnClick(self)
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\BUTTONS\CancelButton-Up" />
				<PushedTexture file="Interface\BUTTONS\CancelButton-Down" />
			</Button>
		</Frames>
		<Scripts>
			<OnLoad inherit="prepend">
				tinsert(UISpecialFrames, self:GetName())
				self:RegisterForDrag("LeftButton")
			</OnLoad>
			<OnDragStart>
				self:StartMoving()
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing()
			</OnDragStop>
		</Scripts>
	</Frame>
	<ScrollFrame name="PlayerList" inherits="UIPanelScrollFrameTemplate" parent="ChoosePlayersFrame">
		<Size x="180" y="124" />
		<Anchors>
			<Anchor x="-10" y="50" point="BOTTOM" relativeTo="ChoosePlayersFrame" />
		</Anchors>
		<Scripts>
			<OnLoad>
				local scrollChild = CreateFrame("Frame", "$parentScrollChild", PlayerList)
				PlayerList:SetScrollChild(scrollChild)
				scrollChild:SetSize(180, 1) -- Initial size, will expand
				scrollChild.contentHeight = 0
			</OnLoad>
		</Scripts>
		<Backdrop bgFile="Interface\FriendsFrame\UI-Toast-Background" edgeFile="Interface\FriendsFrame\UI-Toast-Border">
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5" />
			</BackgroundInsets>
			<TileSize val="12" />
			<EdgeSize val="12" />
		</Backdrop>
	</ScrollFrame>
</Ui>