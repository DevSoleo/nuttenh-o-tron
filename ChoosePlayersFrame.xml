<Ui xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="main.lua" />
	<Font virtual="true" outline="NONE">
		<Color r="1" g="1" b="1" />
	</Font>
	<Alpha toAlpha="1" />
	<Frame name="ChoosePlayersFrame" inherits="BackdropTemplate" hidden="true" parent="UIParent" toplevel="true" movable="true" enableMouse="true" clampedToScreen="true" dontSavePosition="true">
		<Size x="240" y="250" />
		<Anchors>
			<Anchor point="CENTER" relativeTo="UIParent" />
		</Anchors>
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="16" />
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="ChoosePlayersText" inherits="GameFontNormal" text="Choisissez les participants">
					<Size x="280" y="60" />
					<Anchors>
						<Anchor y="-5" point="TOP" />
					</Anchors>
				</FontString>
				<FontString name="GuildFontString" inherits="GameFontNormal" text="Guilde" justifyH="LEFT">
					<Size x="160" y="20" />
					<Anchors>
						<Anchor x="45" y="60" point="LEFT" />
					</Anchors>
					<Color r="0.23" g="0.88" b="0.25" />
				</FontString>
				<FontString name="RaidFontString" inherits="GameFontNormal" text="Raid" justifyH="LEFT">
					<Size x="160" y="20" />
					<Anchors>
						<Anchor x="45" y="30" point="LEFT" />
					</Anchors>
					<Color r="1" g="0.49" />
				</FontString>
				<FontString name="PartyFontString" inherits="GameFontNormal" text="Groupe" justifyH="LEFT">
					<Size x="160" y="20" />
					<Anchors>
						<Anchor x="45" point="LEFT" />
					</Anchors>
					<Color r="0.67" g="0.67" b="0.99" />
				</FontString>
				<FontString name="TargetFontString" inherits="GameFontNormal" text="Cible" justifyH="LEFT">
					<Size x="160" y="20" />
					<Anchors>
						<Anchor x="45" y="-30" point="LEFT" />
					</Anchors>
					<Color r="1" g="1" />
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="CloseButton" inherits="UIPanelCloseButton">
				<Size x="30" y="30" />
				<Anchors>
					<Anchor x="-5" y="-5" point="TOPRIGHT" relativeTo="ChoosePlayersFrame" />
				</Anchors>
			</Button>
			<CheckButton name="CB_GuildPlayers" inherits="UICheckButtonTemplate" text="">
				<Size x="32" y="32" />
				<Anchors>
					<Anchor x="15" y="60" point="LEFT" />
				</Anchors>
				<Scripts>
					<OnClick>
						CB_GuildPlayers_OnClick(self)
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="CB_RaidPlayers" inherits="UICheckButtonTemplate" text="CheckButton1">
				<Size x="32" y="32" />
				<Anchors>
					<Anchor x="15" y="30" point="LEFT" />
				</Anchors>
				<Scripts>
					<OnClick>
						CB_RaidPlayers_OnClick(self)
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="CB_PartyPlayers" inherits="UICheckButtonTemplate" text="CheckButton1">
				<Size x="32" y="32" />
				<Anchors>
					<Anchor x="15" point="LEFT" />
				</Anchors>
				<Scripts>
					<OnClick>
						CB_PartyPlayers_OnClick(self)
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="CB_TargetPlayers" inherits="UICheckButtonTemplate" text="CheckButton1">
				<Size x="32" y="32" />
				<Anchors>
					<Anchor x="15" y="-30" point="LEFT" />
				</Anchors>
				<Scripts>
					<OnClick>
						CB_TargetPlayers_OnClick(self)
					</OnClick>
				</Scripts>
			</CheckButton>
			<Button name="ValidateChoosePlayersButton" inherits="UIPanelButtonTemplate" text="Valider">
				<Size x="75" y="23" />
				<Anchors>
					<Anchor point="BOTTOM" relativeTo="ChoosePlayersFrame">
						<Offset y="10" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						ValidateChoosePlayersButton_OnClick()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad inherit="prepend">
				ChoosePlayersFrame_OnLoad()

				self:RegisterForDrag("LeftButton")
			</OnLoad>
			<OnDragStart>
				self:StartMoving()
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing()
			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>